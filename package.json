{
  "name": "react-hook-inview",
  "version": "4.3.9",
  "description": "React Hook for detecting when an element is in the viewport",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/bitmap/react-hook-inview",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && tsc -p tsconfig.esm.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm ci && npm run build",
    "lint": "eslint .",
    "test": "jest",
    "storybook": "start-storybook -p 6006 --no-dll",
    "build-storybook": "build-storybook --no-dll"
  },
  "keywords": [
    "react",
    "react hook",
    "react hooks",
    "hook",
    "hooks",
    "inview",
    "in viewport",
    "viewport",
    "intersection observer"
  ],
  "author": {
    "name": "Cabe Branson",
    "url": "https://cabe.dev"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@cabe/eslint-config": "latest",
    "@cabe/eslint-config-typescript": "latest",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@storybook/theming": "^6.2.9",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/react-hooks": "^5.1.2",
    "@types/jest": "^26.0.23",
    "@types/react": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "babel-loader": "^8.2.2",
    "eslint": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "jest": "^26.6.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^26.5.6",
    "typescript": "latest"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/test"
    ]
  }
}
